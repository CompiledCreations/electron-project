    "build:renderer": "webpack --config ./webpack/renderer.config.js",
    "build:pack": "electron-builder --dir",
    "build:dist": "electron-builder",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "start": "concurrently --kill-others 'npm run start:web' 'nodemon --watch \"./src/main/**/*\" --watch \"./src/preload/**/*\" --watch \"./src/common/**/*\" --ignore *.test.* --ext js,ts,json --exec npm run start:electron'",
    "start:web": "webpack-dev-server --config ./webpack/renderer.config.js --mode development",
    "start:electron": "npm run build:main -- --mode development && npm run build:preload -- --mode development && electron ./build/main/main.js",
    "test": "jest"
  },
